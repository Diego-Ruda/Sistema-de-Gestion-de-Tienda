{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": false,
    "strict": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "test","dist", "**/*spec.ts"]
}
